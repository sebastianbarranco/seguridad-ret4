# Copy to .env and fill in real values before docker compose up
# ============================================================

# ---------- Postgres ----------
POSTGRES_PASSWORD=changeme_pg_password

# ---------- MinIO ----------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme_minio_password
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme_minio_password

# ---------- Backend (FastAPI) ----------
JWT_SECRET=changeme_jwt_secret_min_32_chars_long!!
MFA_ENCRYPTION_KEY=changeme_mfa_key_32_chars_exactly!

# ---------- rclone Backup ----------
RCLONE_CONFIG_PASS=changeme_rclone_config_password
RCLONE_DEST_REMOTE=gdrive_crypt
RCLONE_DEST_PATH=nvr_backups

# ---------- WireGuard (optional, profile "vpn") ----------
WG_HOST=your.public.ip.or.ddns
WG_EASY_PASSWORD=changeme_wg_password

# ---------- Caddy ----------
SITE_DOMAIN=localhost

# ---------- Frigate cameras (used in config.yml template) ----------
CAM1_RTSP_URL=rtsp://admin:password@192.168.100.10:554/stream1
CAM2_RTSP_URL=rtsp://admin:password@192.168.100.11:554/stream1
CAM1_RTSP_URL_SUB=rtsp://admin:password@192.168.100.10:554/stream2
CAM2_RTSP_URL_SUB=rtsp://admin:password@192.168.100.11:554/stream2

# ---------- RTSP Simulator (dev only) ----------
RTSP_SIM_ENABLED=true
